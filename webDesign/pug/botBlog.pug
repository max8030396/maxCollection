include ./modules/base
- var topperWords = self.htmlWebpackPlugin.options.data.topper;
- var footerWords = self.htmlWebpackPlugin.options.data.footer;
- var pageWords = self.htmlWebpackPlugin.options.data.base;

+headMeta(pageWords)
  +topper(topperWords, 1)
  //- Main Container
  main.container
    .bot-content
      section.s1
        //- .sub_title
        //-   span!= '機器學習'
        .sub-nav
          .navBtn.navBtn1 機器學習
          .navBtn.navBtn2 投資經驗分享
            .navBtn.navBtn3 
            .navBtn.navBtn4 
        .s1-block
          .writings-frame#writings-frame
            //- if pageWords.writings
              each items, index in pageWords.writings
                .writings(class=`writings-${index + 1}`)

                  if items.title_picture
                  .title_picture(class=`title_picture${index + 1}`)
                    figure
                      img(src=`${items.title_picture}`)

                  if items.title
                    .title(class=`title${index + 1}`)
                      h3!=items.title
                  
                  if items.abstract
                    .abstract(class=`abstract${index + 1}`)
                      span!=items.abstract

                  .author-frame(class=`author${index + 1}`)
                      if items.author_picture
                        .author_picture
                            img(src=`${items.author_picture}`)
                      .author-data
                        .author_name!= items.author_name
                        .date!= items.date






      //- section.s2
        .s2-block
          .s2-menu
            each items in pageWords.navMenu
              a.s2-menu-nav.font-medium.box-shadow(class=`${items.isActive ? 'js-selected' : ''}` href=`${items.link}`)!= `${items.text}`


