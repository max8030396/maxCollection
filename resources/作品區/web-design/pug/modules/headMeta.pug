mixin headMeta(words)
  <!DOCTYPE html>
  html(lang="en")
    head
      meta(charset="UTF-8")
      meta(name="viewport", content="width=device-width, initial-scale=1, minimum-scale=1, maximum-scale=1.0, user-scalable=no")
      meta(name="keywords" content=`${words.meta.keyword}`)
      meta(name="description" content=`${words.meta.describe}`)
      link(href="images/favicon.ico" rel="shortcut icon")
      title!= `${words.meta.title}`
    body
      .wrapper
        if block
          block
    script(async src="https://www.googletagmanager.com/gtag/js?id=UA-180599162-1")
    script.
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'UA-180599162-1');