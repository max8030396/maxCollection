  body
    .wrapper
      .indexContainer
        +sideBar('article')
        .article
          .articleTopper
            //-文章搜尋區
            .articleSearchBar.font-md
              +components('searchBar',1)
          .articleBanner
            each i in dataIndex
              if i === 0
                .articleInfo
                  .infoSetting
                    span.font-md ID
                  .articleTitle.infoSetting
                    span.font-md 標題
                  .infoSetting
                    span.font-md 類別
                  .infoSetting
                    span.font-md 網域
                  .infoSetting
                    span.font-md 預覽
              else
                div(class=`articleInfo article-${i}`)
                  .infoSetting
                    span.font-md.span-1
                  .articleTitle.infoSetting
                    span.font-md.span-2
                  .infoSetting
                    span.rwdArticleType.font-md.span-3
                  .infoSetting
                    span.font-md.span-4
                  .infoSetting
                    .infoBtn(type="button" data-bs-toggle="modal" data-bs-target="#moreBtn" data-bs-whatever="moreBtn" article-index="1")
                      +svgIcon('moreBtn')
            .articleInfo.wrongSearch
          
          //-分頁標籤
          .row.paginationJs
            nav.Page.navigation
              ul.pagination
                +components('pagination')
          
          //-點擊預覽顯示區
          .modal.fade#moreBtn(moreBtn="-1" aria-labelledby="moreBtnLabel" aria-hidden="true" data-bs-backdrop="static" data-bs-keyboard="false")
